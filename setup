#!/bin/bash

REPO=$PWD
DOT_FILES=$REPO/dot_files

for file in $DOT_FILES/* ; do
	filename=$(basename $file)
	if [ -d "$file" ]; then
		ln -s $DOT_FILES/$filename ~/.$filename
	else
		ln -s -i -b $DOT_FILES/$filename ~/.$filename
	fi
done
# Install Vundle
git clone https://github.com/gmarik/vundle ~/.vim/bundle/vundle
vim +BundleInstall +qall
