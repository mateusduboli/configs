" vim:ft=vim foldmethod=marker

" {{{ Search
"	=> Search smartcase
set ignorecase
set smartcase
" }}}

" {{{ Registers
"	=> Set the unnamed register to hold the system clipboard
set clipboard=unnamed
" }}}

" {{{ Formatting
"	=> Number of spaces that a indentation marks uses
set shiftwidth=4
set softtabstop=4
set tabstop=4

"	=> Spaces instead of tabs
set expandtab
" }}}

" {{{ LineManipulation
"	=> Join lines upward
noremap K kJ
" }}}
