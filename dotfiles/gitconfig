# vim:ft=gitconfig:et:sw=4
[user]
	email = mateusduboli@gmail.com
	name = Mateus Dubiela Oliveira

[merge]
    tool = nvim

[mergetool]
    keepBackup = false
    prompt = true
[mergetool "nvim"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[push]
	default = current

[branch]
	autosetuprebase = always


[format]
	pretty=oneline

[pretty]
	bigline=%h %aN

[alias]
	tree = "log --graph --pretty=oneline --abbrev-commit --decorate --all --date=relative"
	st = "status -sb"

[git-up "fetch"]
	all = true
	prune = true
[commit]
	template = /Users/mateus/.git-commit-template.txt
[core]
	autocrlf = input
