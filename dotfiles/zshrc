ZSH=$HOME/.oh-my-zsh
ZSH_THEME="candy"
ZSH_CUSTOM="$HOME/.zsh"
ZSH_LOCAL="$HOME/.zshrc.local"
export APP_PATH="$HOME/Applications"

plugins+=(rake git rails vagrant mercurial pip django ruby)

# Source my zsh customizations
if [ -e $ZSH_CUSTOM ]; then
	for file in $ZSH_CUSTOM/*; do
		source $file
	done
fi

if [ -e "$APP_PATH/path.d" ]; then
	for file in "$APP_PATH/path.d"/*; do
		source $file
	done
fi

### Source chaordic environment
if [ -e $ZSH_LOCAL ]; then
	source $ZSH_LOCAL
fi

source $ZSH/oh-my-zsh.sh
has_git_updates
