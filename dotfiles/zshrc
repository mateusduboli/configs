ZSH=$HOME/.oh-my-zsh
ZSH_THEME="candy"
ZSH_CUSTOM="$HOME/.zsh"
ZSH_LOCAL="$HOME/.zshrc.local"
export APP_PATH="$HOME/Applications"
APP_PATH_D="$APP_PATH/path.d"

plugins+=(rake git rails vagrant pip django)

# Source my zsh customizations
if [ -e $ZSH_CUSTOM ]; then
	for file in $ZSH_CUSTOM/*; do
		source $file
	done
fi

# Source my path directory
if [ -e $APP_PATH_D ]; then
	for file in $APP_PATH_D/*.zsh; do
		source $file
	done
fi

# Source local environment
if [ -e $ZSH_LOCAL ]; then
	source $ZSH_LOCAL
fi

append_path $APP_PATH/bin
source $ZSH/oh-my-zsh.sh

alias v='vim'
alias top='htop'
alias tmux='tmux -2u'
