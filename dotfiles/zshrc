ZSH=$HOME/.oh-my-zsh
ZSH_THEME="candy"
ZSH_CUSTOM="$HOME/.zsh"
ZSH_LOCAL="$HOME/.zshrc-local"
APP_BIN="$HOME/Applications/bin"
plugins+=(yum rake chef git rails vagrant mercurial brew pip django ruby)

source $ZSH/oh-my-zsh.sh

### Source chaordic environment
if [ -e $ZSH_LOCAL ]; then
	source $ZSH_LOCAL
fi

if [ -e $ZSH_CUSTOM ]; then
for file in `ls $ZSH_CUSTOM/*`; do
	. $file
done
fi

if [ -e $APP_BIN ]; then
for file in `ls $APP_BIN/*`; do
	. $file
done
fi
